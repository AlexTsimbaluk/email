mixin item(item_class)
	tr.layout__tr.layout__tr_item
		td.layout__td(align='left', valign='middle')
			table.item(class= item_class)
				tr.item__tr
					td.item__td.item__td_left(align='left',valign='middle')
						p.item__p.item_title Откуда
					td.item__td.item__td_right
						p.item__p.item_content Россия, Москва, Малый Тишинский переулок, 19
